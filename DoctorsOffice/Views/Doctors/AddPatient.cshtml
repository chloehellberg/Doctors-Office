@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor
@Html.ActionLink(" All Doctors", "Index", null, null, new { @class="btn btn-info fa fa-user-md" })
<h2>Add a Patient</h2>

<h4>Add a Patient to @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.DoctorId)
  <table>
    <tr>
      <td>@Html.Label("Select patient")</td>
      <td>@Html.DropDownList("patientId")</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-info fa "><i class="fa-user-plus"> Save</i></button>
}

