@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor
@Html.ActionLink(" All Doctors", "Index", null, null, new { @class="btn btn-info fa fa-user-md" })
<h2>Edit</h2>

<h4>Edit @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.DoctorId)
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.EditorFor(model => model.Name)</td>
    </tr>
    <tr>
      <td>@Html.Label("Select Speciality")</td>
      <td>@Html.DropDownList("SpecialtyId")</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-info fa"><i class="fa-edit"> Save</i></button>
}
