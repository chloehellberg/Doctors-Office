@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Doctor>;
@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-plus-circle" })
@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Doctors</h1>

<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <h3>No doctors have been added yet!</h3>
    } 

    @foreach (Doctor doctor in Model)
    {
      <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</li>
    }
  </div>  
</div>