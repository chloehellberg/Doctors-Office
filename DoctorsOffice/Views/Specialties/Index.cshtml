@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Specialty>;
@Html.ActionLink("Add", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
@Html.ActionLink("Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Specialties</h1>

@if (@Model.Count == 0)
{
  <h3>No specialties have been added yet!</h3>
} 

@foreach (Specialty specialty in Model)
{
  <li>@Html.ActionLink($"{specialty.SpecialtyName}", "Details", new { id = specialty.SpecialtyId })</li>
}