@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Specialty
@Html.ActionLink(" All Specialties", "Index", null, new { @class="btn btn-info fa fa-medkit" })
<h2>Edit</h2>

<h4>Edit @Html.DisplayFor(model => model.SpecialtyName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.SpecialtyId)
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.SpecialtyName)</td>
      <td>@Html.EditorFor(model => model.SpecialtyName)</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-info fa "><i class="fa-edit"> Save</i></button>
}

