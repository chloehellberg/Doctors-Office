@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Patient
@Html.ActionLink(" All Patients", "Index", null, null, new { @class="btn btn-info fa fa-users" })
<p>Add a new patient</p>
@using (Html.BeginForm())
{
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.TextBoxFor(model => model.Name)</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.DateOfBirth)</td>
      <td>@Html.TextBoxFor(model => model.DateOfBirth)</td>
    </tr>
    <tr>
      <td>@Html.Label("Select Doctor")</td>
      <td>@Html.DropDownList("DoctorId")</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-info fa fa-plus-circle"><i class=""> Add</i></button>
}